<!-- if Book not found in searchquery -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>No Books Found</title>
    <style>
      body {
        background: #e2f0f9;
        font-family: 'Segoe UI', sans-serif;
      }
      .search-img {
        width: 200px;
        animation: zoom 3s infinite ease-in-out;
      }
      @keyframes zoom {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
      }
    </style>
  </head>
  <body>
    <div class="container d-flex flex-column justify-content-center align-items-center min-vh-100 text-center">
      <img src="/images/no-result.png" alt="Magnifying Glass" alt="No Results" class="search-img mb-3">
      <h2>No books matched your search.</h2>
      <p class="text-muted">Try different keywords or explore our collection.</p>
      <a href="/api/books" class="btn btn-outline-primary btn-lg">Return to Home</a>
    </div>
    <%- include("./partials/scripts") %>
  </body>
</html>